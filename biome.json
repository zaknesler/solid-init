{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "assist": {
    "actions": { "source": { "recommended": true, "organizeImports": "on" } }
  },
  "files": {
    "includes": ["./src/**", "./**/*.{ts,js,json,html,css}", "!node_modules", "!dist"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": { "enabled": true, "trailingCommas": "none" }
  },
  "html": {
    "formatter": { "enabled": true }
  },
  "css": {
    "formatter": { "enabled": true },
    "parser": { "tailwindDirectives": true }
  }
}
