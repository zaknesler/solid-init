{
  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      "language_servers": ["biome", "vtsls", "tailwindcss-language-server"],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
    "TSX": {
      "language_servers": ["biome", "vtsls", "tailwindcss-language-server"],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
    "JSON": {
      "language_servers": ["biome", "vtsls", "json-language-server"],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
    "CSS": {
      "language_servers": ["biome", "vtsls", "vscode-css-language-server"],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
      },
    },
  },
}
